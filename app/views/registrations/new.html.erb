<h1> Create a New User </h1>

<%= form_with model: @user, data: { turbo: false }, url: sign_up_path do |form| %>

<div class="mb-3">

    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder:"yim@code.org"%>


<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control",placeholder: "som3th!ngG00d" %>
</div>

<div class="mb-3">
     <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation,class: "form-control", placeholder: "som3th!ngG00d"%>
</div>

<div class="mb-3">
    
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
</div>
<% end %>