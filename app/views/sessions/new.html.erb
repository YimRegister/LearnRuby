<h1>Log In</h1>


<%= form_with url: log_in_path, data: { turbo: false } do |form| %>
    <div class="mb-3">
        
        <%= form.label :email %>
        <%= form.text_field :email , class: "form-control", placeholder:"yim@code.org"%>
    </div> 

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control",placeholder: "som3th!ngG00d" %>
        <%= link_to "Forgot your password?", password_reset_path%>
    </div>

    <div class="mb-3">
    
    <%= form.submit "Log In", class: "btn btn-primary" %>
    </div>

<% end %>