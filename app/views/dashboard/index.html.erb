<h1>My Dashboard</h1>
<%= "Dashboard for: " + Current.user.username %>
<div>
<%= link_to "Edit Password", password_path, :class => "btn btn-outline-dark m-1" %>
</div>

<h2> My Saved Images </h2>

<center>
<table class="table table-sm">

  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= "\"#{image.title}\"" %></td>
        <td><%= image_tag(image.url, class:"img-thumbnail rounded mx-auto d-block", :align=> "left",style:"width:200px;") %></td>
        <td><%= button_to "Edit", edit_image_titles_path(image),:class => "btn btn-outline-dark m-1" %></td>
        <td><%= button_to "Delete", deleteimage_path(:id => image.id), method: :delete ,:class => "btn btn-outline-dark m-1"%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>